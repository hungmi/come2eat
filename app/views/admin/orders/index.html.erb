<div class="col-md-12">

  <h2 class="text-center"> All Orders </h2>

  <% if @orders.exists? %>
  
    <table class="table">
      <thead>
        <tr>
          <th> 單號 </th>
          <th> Name </th>
          <th> Location </th>
          <th> User </th>
          <th> Description </th>
          <th> Last Update </th>
          <th colspan="2"></th>
        </tr>
      </thead>
      
      <tbody>
        <% @orders.each do |order| %>
          <tr id= <%= "#{order.user.email}_order_#{ order.id }" %> >
            <td> <%= link_to order.id, admin_order_path(order) %> </td>
            <td> <%= order.name %> </td>
            <td> <%= order.location.name %> </td>
            <td> <%= order.user.email %> </td>
            <td> <%= order.description %> </td>
            <td> <%= order.updated_at.to_formatted_s(:short) %> </td> 
            <td> <%= link_to('Edit', edit_admin_order_path(order), class: "btn btn-info") %></td>
            <td> <%= link_to('Delete', admin_order_path(order), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger", remote: true) %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

  <% else %>
    <p>There is no order yet. <%= link_to 'Create now ?', new_order_path %></p>
  <% end %>
</div>