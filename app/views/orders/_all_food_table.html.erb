<% if @restaurants.exists? %>
  <table id="food_table" class="table display">
    <thead>
      <tr style="display: inline-table;">
        <th></th>
      </tr>
    </thead>
    <tbody>

      <% @restaurants.each do |r| %>
        <% if r.foods.exists? %>
          <% r.foods.each_with_index do |food, index| %>
            <tr style="display: inline-table;">
              <td class="text-center">
                <h3><%= r.name %></h3>
                <br><%= image_tag("#{index + 1}.jpg", size: '160x120') %><br>
                <h4><%= food.name %></h4>                
                <%= link_to_add_association '加入餐點', f, :fooditems, :render_options => {:locals => { :restaurant => r.id, :food => food.id }}, class:'btn btn-default btn-lg add_fooditem_btn' %>
              </td>
            </tr>
          <% end %>
        <% end %>
      <% end %>

    </tbody>
  </table>
<% end %>